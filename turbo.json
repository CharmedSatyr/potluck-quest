{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "!.next/cache/**", "dist/**"],
        "env": ["DATABASE_URL"] 
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "test": {
        "dependsOn": ["^test"]
      },
      "lint": {
        "dependsOn": ["^lint", "build"]
      },
      "prettier": {
        "dependsOn": ["^prettier"]
      }
    }
  }