{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"lint": {
			"dependsOn": ["^lint", "build"]
		},
		"prettier": {
			"dependsOn": ["^prettier"]
		}
	}
}
