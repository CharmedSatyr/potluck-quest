{
	"name": "potluck-bot",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"engines": {
		"node": "^22",
		"pnpm": "^9"
	},
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "nodemon",
		"clean": "rm -rf dist",
		"prettier": "npx prettier --write .",
		"lint": "npx eslint src/**/*.ts --fix",
		"type-check": "tsc --noEmit && tsc-alias",
		"register": "tsc && tsc-alias && node dist/register.js",
		"start": "node dist/server.js",
		"test": "NODE_OPTIONS='--experimental-vm-modules' TZ=UTC jest src"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/CharmedSatyr/potluck-bot.git"
	},
	"author": "",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/CharmedSatyr/potluck-bot/issues"
	},
	"homepage": "https://github.com/CharmedSatyr/potluck-bot#readme",
	"dependencies": {
		"@potluck/utilities": "workspace:*",
		"chrono-node": "^2.7.8",
		"discord-interactions": "^4.1.1",
		"discord.js": "^14.18.0",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"luxon": "^3.5.0",
		"node-cache": "^5.1.2"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@potluck/config": "workspace:*",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/luxon": "^3.4.2",
		"@types/node": "^22.13.10",
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"ts-jest": "^29.2.6",
		"tsc-alias": "^1.8.11",
		"typescript": "^5.8.2"
	}
