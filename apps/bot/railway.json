{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"nixpacksPlan": {
			"providers": ["node"],
			"phases": {
				"install": {
					"dependsOn": ["setup"],
					"cmds": ["pnpm install --no-frozen-lockfile"]
				},
				"build": {
					"dependsOn": ["install"],
					"cmds": ["pnpm run build:bot"]
				}
			}
		}
	},
	"deploy": {
		"startCommand": "pnpm run start:bot",
		"sleepApplication": false
	}
}
