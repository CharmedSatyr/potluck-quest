{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@potluck/typescript-config/base",
	"compilerOptions": {
		"module": "NodeNext",
        "moduleResolution": "nodenext",
		"outDir": "./dist",
		"paths": {
			"~/*": ["./src/*"]
		},
		"rootDir": "./",
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": ["node_modules"]
}
