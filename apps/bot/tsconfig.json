{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@potluck/config/typescript",
	"compilerOptions": {
		"baseUrl": "./src",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"paths": {
			"~/*": ["*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/@types/**/*.d.ts"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"],
	"exclude": ["node_modules"]
}
