{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@potluck/typescript-config/base",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": false,
		"outDir": "./dist",
		"paths": {
			"~/*": ["*"]
		},
		"baseUrl": "./src",
		"rootDir": "./src",
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
