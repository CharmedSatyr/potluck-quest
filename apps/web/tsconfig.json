{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@potluck/typescript-config/base",
	"compilerOptions": {
		"noEmit": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"module": "esnext",
		"moduleResolution": "node",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"eslint.config.mjs"
	],
	"exclude": ["node_modules"]
}
