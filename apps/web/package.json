		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.8",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"daisyui": "5.0.0-beta.7",
		"drizzle-kit": "^0.30.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.4.3",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.9",
		"typescript": "^5.8.2"
	},
	"lint-staged": {
		"*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
			"prettier --write"
		],
		"*.+(js|jsx|ts|tsx)": [
			"eslint --fix",
			"npm run test:staged"
		]
