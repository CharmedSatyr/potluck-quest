	"dependencies": {
		"@ai-sdk/openai": "^1.0.14",
		"@auth/drizzle-adapter": "^1.7.4",
		"@heroicons/react": "^2.2.0",
		"@neondatabase/serverless": "^0.10.4",
		"@next/env": "^15.1.4",
		"@types/luxon": "^3.4.2",
		"ai": "^4.0.29",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.3",
		"luxon": "^3.5.0",
		"next": "^15.1.4",
		"next-auth": "5.0.0-beta.25",
		"openai": "^4.77.3",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@potluck/eslint-config": "workspace:*",
		"@potluck/prettier-config": "workspace:*",
