{
	"name": "potluck-web",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": "^22",
		"pnpm": "^9"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"clean": "rm -rf .next",
		"lint": "next lint",
		"prettier": "npx prettier --write .",
		"db:generate": "npx drizzle-kit generate",
		"db:migrate": "npx drizzle-kit migrate",
		"test": "jest",
		"test:staged": "jest --findRelatedTests --passWithNoTests",
		"type-check": "tsc --noEmit"
