		"daisyui": "^4.12.23",
		"drizzle-kit": "^0.30.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.3.0",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2"
	},
	"lint-staged": {
		"*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
			"prettier --write"
