{
	"name": "potluck-web",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=22",
		"pnpm": ">=9"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prettier": "npx prettier --write .",
